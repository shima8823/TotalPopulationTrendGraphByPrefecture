{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "plugin:react/recommended",
		"prettier"
    ],
	"parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
		"project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
		"react/jsx-filename-extension": [0, { "extensions": [".js", ".jsx"] }]
    },
	"settings": {
		"react": {
		  "version": "detect"
		}
	}
}
